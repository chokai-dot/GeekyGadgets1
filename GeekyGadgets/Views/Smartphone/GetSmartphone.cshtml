@model GeekyGadgets.Domain.ViewModels.Smartphone.SmartphoneViewModel

@*data:image/jpeg;base64,@Convert.ToBase64String(Model?.Image ?? Array.Empty<byte>())*@
<form>
    <div class="row">
        <div class="col-md-12">
            <img src="data:image/jpeg" class="img-fluid rounded-start rounded" alt="@Model?.Brand @Model?.Model">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Brand" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Brand">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Model" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Model" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Price" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Price" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="@Model.Color" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Color" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Storage" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Storage" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.RAM" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.RAM" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Display" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Display" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.RearCamera" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.RearCamera" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.FrontCamera" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.FrontCamera" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Battery" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Battery" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Processor" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Processor" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.OS" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.OS" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Dimensions" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Dimensions" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Weight" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Weight" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="@Model.Avatar" class="col-form-label"></label>
            <input type="file" class="form-control" asp-for="@Model.Avatar" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

